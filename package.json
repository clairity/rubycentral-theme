{
  "name": "rubycentral-theme",
  "version": "1.0.0",
  "description": "A Ghost theme for Ruby Central",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "main": "'src/index.js'",
  "scripts": {
    "dev": "node utils/reload",
    "zip": "npm run build && node utils/zip",
    "check": "gscan ."
  },
  "keywords": [
    "ghost-theme"
  ],
  "author": {
    "name": "Ruby Central",
    "email": "hello@rubycentral.org",
    "url": "https://rubycentral.org"
  },
  "license": "private",
  "config": {
    "card_assets": true,
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 50
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 500
      },
      "l": {
        "width": 700
      },
      "xl": {
        "width": 1000
      },
      "xxl": {
        "width": 2000
      }
    }
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "gscan": "^4.36.0"
  }
}
